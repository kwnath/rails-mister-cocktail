<div class="row text-center">
  <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
    <h1 id="header-title"><%= @cocktail.name.upcase %></h1>
    <!-- @cocktail.image -->
      <h2>Ingredients</h2>
        <% @cocktail.doses.each do |e| %>
          <div class="border">
            <%= link_to '', dose_path(e), class: 'glyphicon glyphicon-remove no-textd', method: :delete %>
            |
            <%= e.description %>
            <%= e.ingredient.name %>
          </div>
        <% end %>

      <div class="padded">
        <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), class: 'btn navbar-wagon-item navbar-wagon-button' %>
        <br>
        <br>
            <%= link_to 'New review', new_cocktail_review_path(@cocktail), class: 'btn navbar-wagon-item navbar-wagon-button' %>
        </div>

        <h2>Reviews</h2>
        <div class="reviews">
          <% @cocktail.reviews.each do |r| %>
            <p><%= r.content %></p>
            <p><%= r.rating %></p>
          <% end %>
        </div>

  </div>
</div>
